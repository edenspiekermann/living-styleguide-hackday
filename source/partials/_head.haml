%head
  %meta{ charset: "utf-8" }
  %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
  %title=@meta_title.presence
  %meta{ content: @meta_description.presence, name: "description" }
  %meta{ "name" => "viewport", "content" => "width=device-width, initial-scale=1.0, maximum-scale=1.3" }

  /[if lte IE 8]
    = stylesheet_link_tag "old-ie.css"
  :plain      
    <!--[if gt IE 8]><!-->
  = stylesheet_link_tag "styles.css"
  :plain 
    <!--<![endif]-->
  = stylesheet_link_tag "print.css", media: "print"
  - if content_for?(:stylesheets)
    = yield :stylesheets

  - if settings.use_typekit
    = javascript_include_tag "http://use.typekit.com/XXXXXX.js"
    :javascript
      try{Typekit.load();}catch(e){}

  = javascript_include_tag 'vendor/modernizr.custom.min.js'